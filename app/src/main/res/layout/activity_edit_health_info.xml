<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textWeightLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter weight"
        android:minHeight="48dp"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textStyle="bold"
        android:layout_below="@id/editWeight"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHeightLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter height"
        android:minHeight="48dp"
        android:autofillHints="" />

    <!-- ... Previous code ... -->

    <TextView
        android:id="@+id/textBloodPressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure:"
        android:textStyle="bold"
        android:layout_below="@id/editHeight"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editBloodPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBloodPressureLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter blood pressure"
        android:minHeight="48dp"
        android:autofillHints=""
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/textHeartRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate:"
        android:textStyle="bold"
        android:layout_below="@id/editBloodPressure"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editHeartRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHeartRateLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter heart rate"
        android:minHeight="48dp"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textStyle="bold"
        android:layout_below="@id/editHeartRate"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDateLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter date"
        android:minHeight="48dp"
        android:autofillHints="" />


    <Button
        android:id="@+id/btnSaveEditHealthInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDate"
        android:layout_marginTop="16dp"
        android:text="Save Changes" />

    <Button
        android:id="@+id/btnDeleteHealthInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSaveEditHealthInfo"
        android:layout_marginTop="8dp"
        android:text="Delete Health Info" />

    <ImageView
        android:id="@+id/healthInfoImageView"
        android:layout_width="71dp"
        android:layout_height="48dp"
        android:layout_below="@id/btnDeleteHealthInfo"
        android:layout_marginTop="20dp"
        android:src="@drawable/backicon" />

</RelativeLayout>
