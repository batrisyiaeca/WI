<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageHealthInfoActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/manageHealthInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Manage Health Info"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBackManageHealthInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/manageHealthInfoHeader"
        android:layout_marginTop="16dp"
        android:text="Back"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnAddHealthInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Health Info"
        android:layout_below="@id/manageHealthInfoHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHealthInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnBackManageHealthInfo"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="#F5F5F5" />

</RelativeLayout>
